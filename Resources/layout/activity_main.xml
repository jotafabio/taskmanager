<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/gridLayout1"
    android:rowCount="2"
    android:columnCount="1">
    <ImageButton
        android:src="@android:drawable/ic_menu_add"
        android:id="@+id/action_add" android:contentDescription="Add" 
        android:layout_column="0" android:layout_row="0"
        android:layout_height="wrap_content" android:layout_width="wrap_content" android:visibility="invisible"/>
     <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lstTasks"
        android:layout_row="1"
        android:layout_column="0"/>
</GridLayout>    
